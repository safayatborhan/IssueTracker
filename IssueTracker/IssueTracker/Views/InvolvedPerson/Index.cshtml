@model IEnumerable<IssueTracker.Models.IssueLogInvolvedPersonListingModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaisedByName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RaisedByName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedDate)
                </td>
                <td>
                    @if (item.ReceiveDate == null)
                    {
                        <a asp-action="Start" asp-route-id="@item.Id">Start</a>
                    }
                    else
                    {
                        <a asp-action="End" asp-route-id="@item.Id">Edit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

