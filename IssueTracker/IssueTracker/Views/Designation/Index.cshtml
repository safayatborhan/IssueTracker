@model IssueTracker.Models.DesignationIndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Designations</h2>

<p>
    <a style="margin-left: -20px;" asp-controller="Designation" asp-action="Create" class="btn btn-primary"><i class="fa fa-plus-square-o" aria-hidden="true"></i> Create New</a>
</p>
<table id="dtDesignation" class="ui celled table" style="margin-left: 5px;">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DesignationList) {
        <tr>
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>
                <a class="btn btn-xs btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
